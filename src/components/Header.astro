---
import ThemeIcon from './ThemeIcon.astro';
---
<header>
  <nav>
    
    <div class="Buttons">
        
        <button aria-expanded="false" aria-controls="main-menu" class="menu"> Menu </button>
    </div>
    <div id="main-menu" class="nav-links">
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/blog/">Blog</a>
        <a href="/tags/">Tags</a>
        <ThemeIcon/>
    </div>
    
  </nav>
</header>

<style>
    .buttons div {
        display: flex;
        justify-content: space-between;
      }
    /* nav styles */
    .menu {
        background-color: #3a3a3a;
        border: none;
        color: #fff;
        font-size: 1.2rem;
        font-weight: bold;
        padding: 5px 10px;
    }

    .nav-links {
        width: 100%;
        display: none;
        margin: 0;
    }

    .nav-links a {
        display: block;
        text-align: center;
        padding: 10px 0;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
        color: #555555;
    }
    .light .menu {
        background-color: #fff;
        color: #000;
      }
      
      .light .nav-links a:hover,
      .light .nav-links a:focus {
        color: #000;
      }
      
      .light .nav-links a {
        color: #fff;
      }
      
      .light a {
        color: #ffffff57;
      }
    .nav-links a:hover,
    .nav-links a:focus{
        background-color: #50505057;
    }

    :has(.menu[aria-expanded="true"]) .nav-links {
        display: unset;
    }

    @media screen and (min-width: 636px) {
      .nav-links {
        margin-left: 5em;
        display: block;
        position: static;
        width: auto;
        background: none;
      }

      .nav-links a {
        display: inline-block;
        padding: 15px 20px;
      }

      .menu {
        display: none;
      }
    }

</style>