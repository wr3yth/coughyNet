---
import BaseLayout from "../../layouts/BaseLayout.astro";

const poems = [
  {
    title: "Violent Bloom",
    href: "/poetry/violent_bloom",
    excerpt: `Violets are red, and Roses are blue
Life can be violent, yet flowers get through`
  },
  {
    title: "Sum Things Up",
    href: "/poetry/sum_things_up",
    excerpt: `W
∑ things ⇧
O
S`
  }
];
---

<BaseLayout pageTitle="Poetry">

<main class="px-6 py-20 max-w-3xl mx-auto text-neutral-800 dark:text-neutral-100 leading-relaxed">

  <h1 class="text-3xl font-bold mb-10">Poems</h1>

  <div class="flex flex-col gap-10">

    {poems.map((p) => (
      <a href={p.href}
         class="block p-5 rounded-xl bg-white/10 dark:bg-white/5 backdrop-blur-lg 
                border border-white/20 hover:bg-white/20 dark:hover:bg-white/10 
                transition-all duration-300">
        
        <h2 class="text-xl font-semibold mb-2">{p.title}</h2>

        <p class="whitespace-pre-line opacity-80 text-sm font-serif">
          {p.excerpt}...
        </p>

      </a>
    ))}

  </div>

</main>

</BaseLayout>
