---
import Background from "../components/Astrogen.astro";
import Header from "../components/Header.astro";

import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en" class="transition-none">
  
  <head>
      <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <slot name="head" />

  <!-- Ensures full Unicode coverage -->
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Noto+Serif&family=Noto+Sans+Symbols+2&display=swap"
  />

    <script>
      // Force-set dark mode BEFORE first paint
      const isDark = localStorage.theme === "dark"
        || (!("theme" in localStorage)
            && window.matchMedia("(prefers-color-scheme: dark)").matches);

      if (isDark) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>

    <script>
      // Remove transition suppression AFTER page load
      window.addEventListener("load", () => {
        document.documentElement.classList.remove("transition-none");
      });
    </script>
  </head>

  <body>
    <Background />
    <Header />
    <!-- spacer -->
    <main class="px-2 pt-12 pb-12 max-w-3xl mx-auto text-neutral-800 dark:text-neutral-100"></main>

    <h1>{pageTitle}</h1>
    <slot />
  </body>
</html>
